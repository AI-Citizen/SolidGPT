{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"new-cap": [2, { "capIsNewExceptions": ["RequireObjectCoercible", "SpeciesConstructor", "IsCallable", "Type"] }],
		"no-magic-numbers": 0,
	},

	"overrides": [
		{
			"files": "test/**/*",
			"rules": {
				"max-lines-per-function": 0,
				"max-params": 0,
				"no-invalid-this": 1,
				"prefer-promise-reject-errors": 0,
			},
		},
	],
}
